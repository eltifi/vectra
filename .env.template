# VECTRA Backend Environment Variables Template
# Copy this file to .env and update with your actual values
# This template includes all required variables for production deployment

# ============================================================================
# APPLICATION ENVIRONMENT
# ============================================================================

# Application environment mode
# Options: development, staging, production
# default: development
ENVIRONMENT=production

# Allowed CORS origins (comma-separated for production)
# Examples:
#   Development: * (default)
#   Production: https://frontend.example.com,https://www.example.com
ALLOWED_ORIGINS=*

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# PostgreSQL Database URL
# Format: postgresql://[username]:[password]@[host]:[port]/[database]
# Docker: Use service name 'db' (postgresql://postgres:mysecretpassword@db:5432/vectra)
# Local: Use localhost (postgresql://postgres:mysecretpassword@localhost:5432/vectra)
DATABASE_URL=postgresql://postgres:mysecretpassword@db:5432/vectra

# ============================================================================
# REDIS CACHE CONFIGURATION
# ============================================================================

# Redis connection URL
# Format: redis://[password]@[host]:[port]/[database]
# Docker: Use service name 'redis' (redis://redis:6379/0)
# Local: Use localhost (redis://localhost:6379/0)
# With password: redis://:password@host:port/0
REDIS_URL=redis://redis:6379/0

# ============================================================================
# DATA INGESTION
# ============================================================================

# Path to FDOT data files directory
# Should contain subdirectories: basemap_route_road/, interstates/, toll_roads/, 
# number_of_lanes/, maxspeed/, mpoarea/, aadt/
# Default: /app/data (production Docker path)
# Development: ./data (local path)
RAW_DATA_PATH=/app/data

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

# Application log directory
# If not set, defaults to /app/logs (production) or ./logs (development)
LOG_DIR=/app/logs

# Log output destination
# Options:
#   - 'file': Write logs to logs/app.log only
#   - 'stdout': Write logs to console only
#   - 'both': Write logs to both file and console (default)
LOG_OUTPUT=stdout

# ============================================================================
# PRODUCTION SPECIFIC SETTINGS
# ============================================================================

# Application worker count for production
# Recommendation: 2-4 * number of CPU cores
# Default: 4
UVICORN_WORKERS=4

# API rate limiting (requests per minute)
# Set to 0 to disable rate limiting
RATE_LIMIT_PER_MINUTE=60

# Enable HTTPS/TLS
# Set to true in production
USE_HTTPS=true

# SSL certificate paths (only required if USE_HTTPS=true)
# SSL_CERT_FILE=/etc/ssl/certs/server.crt
# SSL_KEY_FILE=/etc/ssl/private/server.key

# ============================================================================
# MONITORING AND OBSERVABILITY
# ============================================================================

# Enable application metrics
ENABLE_METRICS=true

# Sentry DSN for error tracking (optional)
# SENTRY_DSN=https://your-sentry-key@sentry.io/project-id

# DataDog API key for monitoring (optional)
# DATADOG_API_KEY=your-datadog-api-key

# ============================================================================
# SECURITY SETTINGS
# ============================================================================

# Secret key for session management
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-change-in-production

# Authentication settings
# Set to true to enable API key authentication
REQUIRE_API_KEY=false

# API key for authentication (if REQUIRE_API_KEY=true)
# API_KEY=your-api-key-change-in-production
